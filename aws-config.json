{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "CloudFormation template for Todo App with DynamoDB",
  "Resources": {
    "TodoTasksTable": {
      "Type": "AWS::DynamoDB::Table",
      "Properties": {
        "TableName": "TodoTasks",
        "AttributeDefinitions": [
          {
            "AttributeName": "id",
            "AttributeType": "S"
          }
        ],
        "KeySchema": [
          {
            "AttributeName": "id",
            "KeyType": "HASH"
          }
        ],
        "BillingMode": "PAY_PER_REQUEST",
        "Tags": [
          {
            "Key": "Application",
            "Value": "TodoApp"
          },
          {
            "Key": "Environment",
            "Value": "Production"
          }
        ]
      }
    }
  },
  "Outputs": {
    "TableName": {
      "Description": "Name of the DynamoDB table",
      "Value": {
        "Ref": "TodoTasksTable"
      }
    },
    "TableArn": {
      "Description": "ARN of the DynamoDB table",
      "Value": {
        "Fn::GetAtt": ["TodoTasksTable", "Arn"]
      }
    }
  }
}
